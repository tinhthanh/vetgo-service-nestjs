{
  "name": "angular-chrome-extension",
  "version": "1.0.0",
  "author": "VetGo",
  "description": "VetGo Extension",
  "scripts": {
    "clean": "rimraf chrome/dist",
    "build:chrome": "webpack --config chrome/webpack.config.js",
    "pack": "cd chrome/dist && bestzip ../../vetgo-extension-build.zip *",
    "build:chrome-production": "npm run clean && webpack --config chrome/webpack.config.prod.js && npm run pack"
  },
  "private": true,
  "dependencies": {
    "firebase": "^9.17.2",
    "js-sha256": "^0.9.0",
    "lodash": "^4.17.21",
    "rxjs": "~7.8.0",
    "tslib": "^2.4.1",
    "uuid": "^9.0.0",
    "zone.js": "~0.12.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "bestzip": "^2.2.1",
    "copy-webpack-plugin": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^4.1.1",
    "ts-loader": "^9.4.2",
    "typescript": "~4.9.5",
    "webpack-cli": "^5.0.1"
  }
}
